rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Path-based security: Files are stored in a user-specific folder.
    // The path contains the user's UID, ensuring they can only access their own files.
    match /users/{userId}/files/{allPaths=**} {
      // isOwner function validates that the requesting user's UID matches the {userId} in the path.
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      // Allow read access (downloads) only to the owner of the file.
      allow read: if isOwner(userId);

      // Allow write access (uploads, updates, deletes) only to the owner.
      // We also check the file size and content type to prevent malicious uploads.
      allow write: if isOwner(userId)
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*|application/pdf|text/.*');
    }

    // Public path for contact form attachments
    match /fb-7-message-attachments/{allPaths=**} {
        // Allow anyone to write to this path, but with restrictions.
        // This is for public contact form submissions.
        allow write: if request.resource.size < 10 * 1024 * 1024 // Max 10MB
                      && (request.resource.contentType.matches('image/.*') ||
                          request.resource.contentType.matches('application/pdf') ||
                          request.resource.contentType.matches('text/plain'));
        
        // Disallow reads by default. Access should be handled via download URLs stored in Firestore.
        allow read: if false;
    }

    // Rules for the user-uploads folder used by the NanoProcessor
    match /user-uploads/{uid}/{filename} {
      // Allow any authenticated user to read (download) any file.
      allow read: if request.auth != null;

      // Allow write (create, update, delete) only if the user's UID matches the one in the path.
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
