rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Path-based security: Files are stored in a user-specific folder.
    // The path contains the user's UID, ensuring they can only access their own files.
    match /users/{userId}/files/{allPaths=**} {
      // isOwner function validates that the requesting user's UID matches the {userId} in the path.
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      // Allow read access (downloads) only to the owner of the file.
      allow read: if isOwner(userId);

      // Allow write access (uploads, updates, deletes) only to the owner.
      // We also check the file size and content type to prevent malicious uploads.
      allow write: if isOwner(userId)
                    && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                    && request.resource.contentType.matches('image/.*|application/pdf|text/.*');
    }
  }
}